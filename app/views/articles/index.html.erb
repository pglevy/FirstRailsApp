<h1 class="mb-5">Hello, Rails!</h1>

<%= link_to "New Article", new_article_path, class: "btn btn-primary btn-large mb-2" %>

<ul class="list-group">
  <% @articles.each do |article| %>
    <li class="list-group-item">
      <%= link_to article.title, article %> <span class="text-muted">(<%= article.created_at.strftime("%F") %>)</span>
    </li>
  <% end %>
</ul>